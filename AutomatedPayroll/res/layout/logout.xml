<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E040FB"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btnShowLocation"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="You Are Now Present On field"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:padding="20dp"
         android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
         android:layout_marginLeft="60dp"
        android:text="Want To Log Out?" />
   
    <ImageView
        android:id="@+id/Imageprev"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/cpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="100dp"
        
        android:text="Click Image" />

    <Button
        android:id="@+id/up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:layout_below="@+id/cpic"
         android:layout_marginLeft="90dp"
        android:layout_centerInParent="true" />
    

</LinearLayout>
